{
  "name": "fresh-ai-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend with TypeScript, PostgreSQL, and TypeORM",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migration:generate": "npx tsx ./node_modules/typeorm/cli.js migration:generate -d data-source.ts",
    "migration:create": "npx tsx ./node_modules/typeorm/cli.js migration:create",
    "migration:run": "npx tsx ./node_modules/typeorm/cli.js migration:run -d data-source.ts",
    "migration:revert": "npx tsx ./node_modules/typeorm/cli.js migration:revert -d data-source.ts",
    "migration:show": "npx tsx ./node_modules/typeorm/cli.js migration:show -d data-source.ts",
    "migration:run:prod": "npm run build && cross-env NODE_ENV=production typeorm migration:run -d dist/data-source.js",
    "migration:revert:prod": "npm run build && cross-env NODE_ENV=production typeorm migration:revert -d dist/data-source.js",
    "migration:show:prod": "npm run build && cross-env NODE_ENV=production typeorm migration:show -d dist/data-source.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "postgresql",
    "typeorm",
    "express",
    "jwt",
    "backend"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^8.0.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "directories": {
    "test": "tests"
  }
}
